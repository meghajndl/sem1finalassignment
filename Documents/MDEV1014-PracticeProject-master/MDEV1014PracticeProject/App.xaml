<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MDEV1014PracticeProject.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- App Colors -->
            <Color x:Key="PageBackgroundColor">#f1f1f1</Color>


            <!-- Component Styles -->
            <Style x:Key="LabelTitleStyle" TargetType="Label">
                <Setter Property="FontSize" Value="25"/>
                <Setter Property="Margin" Value="25"/>
                <Setter Property="FontAttributes" Value="Bold"/>
            </Style>

            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="#4ca1e9"/>
                <Setter Property="Margin" Value="20,0"/>
                <Setter Property="TextColor" Value="White"/>
            </Style>

            <Style x:Key="ButtonStyle2" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#d92363"/>
                <Setter Property="Margin" Value="20,0"/>
                <Setter Property="TextColor" Value="White"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>